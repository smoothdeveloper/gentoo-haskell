	>=dev-haskell/language-java-0.2.6:=[profile?]
	>=dev-haskell/lens-4.1.1:=[profile?]
	dev-haskell/mtl:=[profile?]
	dev-haskell/network:=[profile?]
	>=dev-haskell/parsers-0.9:=[profile?]
	dev-haskell/split:=[profile?]
	dev-haskell/text:=[profile?]
